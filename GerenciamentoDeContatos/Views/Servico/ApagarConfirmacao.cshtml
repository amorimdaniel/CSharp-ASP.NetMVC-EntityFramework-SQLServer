@model ServicoModel
@{
    ViewData["Title"] = "Confirmação apagar servico";
}

<div class="text-center">
    <h3>Realmente deseja apagar o serviço (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Servico" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Servico" asp-action="Index">Cancelar</a>